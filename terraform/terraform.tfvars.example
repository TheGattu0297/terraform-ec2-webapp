# Example terraform.tfvars - replace placeholders before use
aws_region     = "us-east-1"
environment    = "dev"
app_name       = "ec2-webapp"
instance_count = 2
instance_type  = "t2.micro"

# Network Configuration
vpc_cidr              = "10.0.0.0/16"
public_subnet_cidrs   = ["10.0.10.0/24", "10.0.11.0/24"]
private_subnet_cidrs  = ["10.0.1.0/24", "10.0.2.0/24"]

# Database Configuration - provide a secure password at runtime
db_engine         = "postgres"
db_instance_class = "db.t3.micro"
db_name           = "myappdb"
db_username       = "ec2webadmin"
# DO NOT store the real password here. Provide it via environment variable:
# export TF_VAR_db_password="YourSecurePassword"
# or use: terraform plan -var="db_password=YourSecurePassword"
